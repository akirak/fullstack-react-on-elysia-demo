{
  "compilerOptions": {
    "baseUrl": "./src",
    "moduleResolution": "node",
    "types": [
      "bun-types"
    ],
    "allowJs": true,
    "strict": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts",
    "**/*.d.ts",
    "**/*.mjs"
  ]
}
